{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rating</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rating.id }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ rating.sujet }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ rating.note }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rating_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('rating_edit', { 'id': rating.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
